@model WineS.Entities.Product


        <a class="cbp-vm-image" href="@Url.Action("ConcreteProductPage", "Product", new {Id = @Model.Id})">
            <div class="simpleCart_shelfItem">
                <div class="view view-first">
                    <div class="inner_content clearfix">
                        <div class="product_image">
                            <img src="@Url.Action("GetImage", "Product",
                                          new { gameId = Model.Id})" class="img-responsive" alt=""/>
                            <div class="mask">
                                <div class="info">Quick View</div>
                            </div>
                            <div class="product_container">
                                <div class="cart-left">
                                    <p class="title">@Model.Title</p>
                                </div>
                                <div class="pricey"><span class="item_price">@Model.Price</span></div>
                                <div class="clearfix"></div>
                            </div>		
                        </div>
                    </div>
                </div>
            </div>
        </a>
        <div class="cbp-vm-details">
            Silver beet shallot wakame tomatillo salsify mung bean beetroot groundnut.
        </div>
@Ajax.ActionLink(" Add to cart", "AddToCart", "Cart", 
                                                     new {returnUrl = Request.Url.PathAndQuery, Id = Model.Id},
                                                     new AjaxOptions { UpdateTargetId = "ajaxexampl" }, new {@class = "cbp-vm-icon cbp-vm-add item_add"})

