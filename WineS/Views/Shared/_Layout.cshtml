                        <li><a href="@Url.Action("Main","Main")">Доставка</a></li>
                        <li><a href="@Url.Action("Contact","Contact")">Контакты</a></li>
                    </ul>
                </div>
                <!--/.navbar-collapse-->
            </nav>
            <!--/.navbar-->
        </div>
    </div>
    @RenderBody()
