    <link rel="shortcut icon" href="~/favicon.ico">

    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="header">
        <div class="header-top-strip">
            <div class="container">
                <div class="header-top-left">
                    <ul>
                        @if (HttpContext.Current.User.Identity.IsAuthenticated == true)
                        {
                            var claims = ((System.Security.Claims.ClaimsIdentity)User.Identity).Claims;
                            var claim = claims.SingleOrDefault(m => m.Type == "FirstName");
                            <li><a href="@Url.Action("UserAccount", "User")"><span class="glyphicon glyphicon-user"> </span>@claim.Value</a></li>
                            <li><a href="@Url.Action("Logout", "Account")"><span class="glyphicon glyphicon-user"> </span>Выход</a></li>

                        }
                        else
                        {

                            <li><a href="@Url.Action("Login", "Account")"><span class="glyphicon glyphicon-user"> </span>Вход</a></li>

                        }
                        <li id="ajaxexampl">@Html.Action("SummaryPrice", "Cart")</li>

                    </ul>
                </div>

                <div class="header-right">
                    <div class="cart box_1">

                        <div class="clearfix"> </div>
                    </div>
                </div>
                <div class="clearfix"> </div>
            </div>
        </div>
    </div>
    <!-- header-section-ends -->
    <div class="inner-banner">
        <div class="container" style="height: 150px;">

            <div class="logo">
                <h10>
                    <a href="@Url.Action("Main", "Main")"><img src="/images/logo.png" width="250" height="250" alt="Cosily"> </a>
                </h10>
            </div>

