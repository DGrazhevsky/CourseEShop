
@{
    ViewBag.Title = "Cosily | контакты";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="contact">
    <div class="container">
        <div class="dreamcrub">
            <ul class="breadcrumbs">
                <li class="home">
                    <a href="@Url.Action("Main", "Main")" title="Главная">Главная</a>&nbsp;
                    <span>&gt;</span>
                </li>
                <li>
                    Контакты
                </li>
            </ul>
            <ul class="previous">
                <li>@Html.ActionLink("Вернуться на предыдущую страницу", null, null, null, new { href = Request.UrlReferrer })</li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="heading text-center">
            <h3>Мы находимся здесь</h3>
        </div>
        <div class="contact-map">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2242.1529353412557!2d37.46181511593271!3d55.80794528056808!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x46b5486792e25e59%3A0x76f461ca27ae7bbc!2z0YPQuy4g0JzQsNGA0YjQsNC70LAg0JLQsNGB0LjQu9C10LLRgdC60L7Qs9C-LCAxNSwg0JzQvtGB0LrQstCwLCAxMjMwOTg!5e0!3m2!1sru!2sru!4v1543159989080" width="600" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
        </div>
        <div class="contact-form">
            <div class="cheading text-center">
                <h3>Форма обратной связи</h3>
            </div>
            <form>
                <div class="contact-left">
                    <input type="text" placeholder="Имя" required>
                    <input type="text" placeholder="E-mail" required>
                    <input type="text" placeholder="Тема" required>
                </div>
                <div class="contact-right">
                    <textarea placeholder="Message" required></textarea>
                </div>
                <div class="clearfix"></div>
                <input type="submit" value="ОТПРАВИТЬ">
            </form>
        </div>
    </div>
</div>